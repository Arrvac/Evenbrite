<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <%if @user.avatar.attached?%>
                                    <div class="m-b-25"> <%= image_tag @user.avatar, alt: 'avatar', class: "img-radius" %> </div>
                                <%else%>
                                    <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                <%end%>
                                <h6 class="f-w-600">
                                <%= @user.first_name%> <%= @user.last_name %>
                                </h6>
                                <p>THP Designer</p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                <% if current_user == @user %>
                                    <p><%= link_to "(Change my password)", edit_user_registration_path(@user) %></p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                    <p> <%= link_to 'Mon espace Evenement', attendances_path %> </p>
                                <% end %>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400"><%= @user.email %></h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Description</p>
                                        <h6 class="text-muted f-w-400"><%= @user.description %></h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Event</p>
                                        <% @user.events.each do |e| %>
                                            <h6 class="text-muted f-w-400"><%= e.title %></h6>
                                        <% end %>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Most Viewed</p>
                                        <h6 class="text-muted f-w-400">Dinoter husainm</h6>
                                    </div>
                                </div><br>
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Profile picture</h6>
                                <%= form_tag user_avatars_path(@user), multipart: true do %>
                                        <%= file_field_tag :avatar, class: "text-center" %>
                                        <%= submit_tag "mettre Ã  jour" , class: "btn btn-lg btn-primary btn-block" %>
                                    <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>